<div id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= category.description %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= category.color %>
  </p>

  <p>
    <strong>Products:</strong>
    <ul>
      <% category.products.each do |product| %>
        <li>
          <%= product.name %>
        </li>
      <%end%>
    </ul>
  </p>

</div>
